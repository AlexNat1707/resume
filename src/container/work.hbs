<div>
    {{#with main}}
    <main>
        <section>
            <div>
                {{> title data="Work history" big=true}}
            </div>
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>
                        <br>
                        <div>
                            {{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} (по даний час) {{/if}}
                        </div>
                        <br>
                        <div>
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                        <br>
                        <div>
                            <strong>
                                Projects ({{projectAmount}})
                            </strong>
                        </div>
                    </li>
                    <br>
                    <ul>
                        {{#each projects}}
                        <div>
                            <li>
                                {{> link text=name href=url blank=true noLine=true}}
                            </li>
                        </div>
                        <div>
                            <p>{{about}}</p>
                        </div>
                        <br>
                        <div>
                            <em>Projects stacks</em> ({{stackAmount}})
                        </div>
                        <br>
                        <div>
                            <ul>
                                {{#each stacks}}
                                <li>
                                    {{name}}
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                        <br>
                        <br>
                        <div>
                            <em>Projects awards</em> ({{awardAmount}})
                        </div>
                        <br>
                        <ul>
                            {{#each awards}}
                            <li>
                                {{name}}
                            </li>
                            {{/each}}
                        </ul>
                        {{/each}}
                    </ul>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

