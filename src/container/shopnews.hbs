<main>
    {{> breadcrumb}}
    <section class="mt-5">
        {{#with newsData}}
        <div class="row">
            <img src="{{photo}}">
        </div>
        <div>
            {{#with head}}
            <h1 class="my-4">{{heading}}</h1>
            <p>{{description}}</p>
            {{/with}}
        </div>
        <div>
            {{#each body}}
            <h2 class="my-3">{{title}}</h2>
            <p>{{text}}</p>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section class="col-12 mb-5">
        {{#with newsOtherBlock}}
        <h2 class="text-center">{{title}}</h2>
        {{> shoppost}}
        {{/with}}
    </section>

    <hr class="my-5">

</main>