<main>
    <section class="row">
        <div class="col-12">
            <div class="card py-3 ps-3 pe-3">
                {{#with navigation}}
                <div class="nav">
                    <div class="col-9">
                        <div class="nav-item">
                            <h2>{{Logo}}</h2>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="nav">
                            {{#each links}}
                            <div class="nav-item">
                                <a href="{{href}}" class="nav-link text-end">{{text}}</a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
    </section>

    <section class="row mt-5">
        <div class="col-12">
            <div class="row md-3">{{#with newsBlock}}</div>
            <h2 class="text-center">{{title}}</h2>
            <section class="col-12">
                <div class="row g-2 mt-3">
                    {{#each cards}}
                    <div class="col-3">
                        <div class="card h-100 text-bg-dark">
                            <div class="card-header">{{title}}
                                {{#if isTop}}
                                <span class="badge text-bg-success rounded-pill">Нова</span>
                                {{/if}}
                                {{#if idNew}}
                                <span class="badge text-bg-danger rounded-pill">Топ</span>
                                {{/if}}
                            </div>
                            <div class="card-body">
                                <p>{{description}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </section>
            {{/with}}
        </div>
    </section>

    <hr class="my-5">

    <section>
        {{#with goodsBlock}}
        <div class="col-12 mb-5">
            <div class="nav nav-tabs">
                {{#each tabs}}
                {{#if isActive}}
                <div class="nav-item">
                    <a href="#" class="nav-link active">{{text}}</a>
                </div>
                {{else}}
                <div class="nav-item">
                    <a href="#" class="nav-link">{{text}}</a>
                </div>
                {{/if}}
                {{#if isDisabled}}
                <div class="nav-item">
                    <a href="#" class="nav-link disabled">{{text}}</a>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>

        <div class="col-12">
            <div class="row gy-5 gx-2">
                {{#each cards}}
                <div class="col-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="{{image}}">
                        <div class="card-body">
                            <div>
                                <h6 class="card-title">{{title}}{{#if isHot}}
                                    <span class="badge text-bg-warning rounded-pill text-uppercase">hot!</span>
                                    {{/if}}
                                    {{#if idNew}}
                                    <span class="badge text-bg-primary rounded-pill">Топ</span>
                                    {{/if}}
                                </h6>
                            </div>
                            <p class=" mb-1 pb-1">{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section class="row">
        <div class="col-12">
            <div class="card">
                {{#with service}}
                <div>
                    <div class="col-6 m-3">
                        <h2>{{title}}</h2>
                        <p>{{description}}</p>
                    </div>
                    <div class="col-6">
                        {{#each buttons}}
                        <button class="col-3 btn btn-primary m-4">
                            <a href="{{link}}" class="nav-link text-center">{{text}}</a>
                        </button>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
        </div>
    </section>
</main>