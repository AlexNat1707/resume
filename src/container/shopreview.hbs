<main>
    <section>
        {{#with formBlock}}
        <div class="row">
            <div class="col-8">
                <h1>{{header}}</h1>
                <div class="my-4">
                    {{#with rating}}
                    <p>{{title}}: {{value}}</p>
                    {{/with}}
                </div>
                <div class="mb-4">
                    {{#with actionBlock}}
                    <div class="nav nav-tabs nav-fill justify-content-between">
                        {{#each tabs}}
                        <div class="nav-item">
                            <a href="#"
                                class="{{#if @last}}nav-link active{{/if}} me-3 text-decoration-none">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    <hr class="my-5">
                    <div>
                        {{#with field}}
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-row justify-content-between">
                                    <p>{{placeholder}}</p>
                                    <div>
                                        {{#with button}}
                                        <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                <hr class="my-5">
                <div>
                    {{#with feedbackBlock}}
                    <h2>{{title}}</h2>
                    <div class="d-flex flex-row">
                        {{#each buttons}}
                        <div class="col-4 mt-5 mb-5">
                            {{#with this}}
                            <a href="{{this.link}}"
                                class="btn {{#if isWarning}}btn-warning{{/if}}{{#if isSuccess}}btn-success{{/if}}{{#if isDanger}}btn-danger{{/if}}">{{this.text}}</a>
                            {{/with}}
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card mb-3">
                    <div class="card-body">
                        <img src="{{photo}}">
                        <p class="mt-3">{{name}}</p>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <h6>{{price}}</h6>
                        <div>Є в наявності</div>
                        <div class="col-8">
                            {{#each buttons}}
                            <a href="{{link}}"
                                class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}} my-2">{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        {{#with seller}}
                        <span>{{title}}: <b>{{value}}</b></span>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
            {{/with}}
    </section>
    <hr class="mb-5">
    {{> reviewItem}}
</main>