<main>
    {{> breadcrumb}}
    <section>
        <h1>{{header}}</h1>
        <div class="row mb-5">
            {{#each sortBlock}}
            <div class="col-3">
                <label class="form-label"></label>
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option>
                        {{value}} - {{text}}<br />
                    </option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>
    </section>

    <section class="mb-5">
        <div class="row g-2">
            <div class="col-4">
                {{#with filterBlock}}
                <div class="card">
                    <div class="card-body">
                        <div>
                            {{#with sellers}}
                            <div>{{title}}</div>
                            <div class="form-check py-2">
                                {{#each list}}
                                <input type="checkbox" class="form-check-input">
                                <label class="form-check-label">{{this.value}}</label><br />
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                        <hr class="my-2">
                        <div>
                            {{#with brands}}
                            <div class="mb-2">{{title}}</div>
                            <div>
                                {{#with input}}
                                <input class="form-control" placeholder="{{placeholder}}">
                                {{/with}}
                            </div>
                            <div class="py-2">
                                {{#each options}}
                                <input type="checkbox" class="form-check-input">
                                <label class="form-check-label">{{this.value}}</label><br />
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                        <hr class="my-2">
                        <div>
                            {{#with price}}
                            <div>{{title}}</div>
                            <div class="d-flex flex-row">
                                {{#with range}}
                                <input class="form-control me-3" placeholder="{{from}}">
                                <input class="form-control me-3" placeholder="{{to}}">
                                {{/with}}
                                {{#with button}}
                                <a href="{{link}}" class="btn btn-outline-dark ">{{text}}</a>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>
                        <hr class="my-2">
                        <div>
                            {{#each filterList}}
                            <div class="mb-3">{{title}}</div>
                            <div class="py-1">
                                {{#each options}}
                                <input type="checkbox" class="form-check-input py-1">
                                <label class="form-check-label py-1">{{this.value}}</label><br />
                                {{/each}}
                            </div>
                            {{#if @last}}
                            <br>
                            {{else}}
                            <hr class="my-3">
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
            <div class="col-8">
                <div class="row g-2">
                    {{#each goodsList}}
                    <div class="col-6">
                        {{> catalogItem}}
                    </div>
                    {{/each}}
                </div>
            </div>
    </section>
</main>