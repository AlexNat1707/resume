<main>
    <section>
        <h1>{{header}}</h1>
        <div class="row">
            <div class="col-8">
                {{#with contacts_data}}
                <h3>{{title}}</h3>
                <div>
                    {{#each buttons}}
                    <button
                        class="btn {{#if isPrimary}}btn-primary{{else}}btn-outline-primary{{/if}} my-3 me-2">{{text}}</button>
                    {{/each}}
                </div>
                <div class="row">
                    {{#with form}}
                    <div class="col-6 my-2">
                        {{#with input.surname}}
                        <label class="form-label">{{this.label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{this.caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 my-2">
                        {{#with input.name}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 my-2">
                        {{#with input.phone}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 my-2">
                        {{#with input.email}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <hr class="my-4">
                    <div class="col-8">
                        {{#each switch}}
                        <div class="form-check form-switch py-2">
                            <label class="form-check-label">{{text}}</label>
                            <input type="checkbox" {{#if isActive}}checked{{/if}} class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
                {{/with}}
                <hr class="mb-4">
                <div>
                    {{#with delivery}}
                    <h3>{{title}}</h3>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                {{#each select}}
                                <div class="col-6">
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                        <option>
                                            {{value}} - {{text}}<br />
                                        </option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        {{#each delivery_type}}
                        <div class="row">
                            <div class="col-6 py-1">
                                <input type="radio" name="delivery" {{#if @first}}checked{{/if}}>
                                <label>{{type}}</label>
                            </div>
                            <div class="text-end col-6">
                                {{value}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <hr class="my-4">
                    <div>
                        {{#each payment}}
                        <input type="radio" name="delivery" {{#if @first}}checked{{/if}}>
                        <label>{{type}}</label><br />
                        <div class="form-text my-2">{{description}}</div>
                        {{/each}}
                    </div>
                    <hr class="my-4">
                    <div class="row">
                        {{#with contact}}
                        <h3>{{title}}</h3>
                        <div class="col-6 my-2">
                            {{#with surname}}
                            <label class="form-label">{{this.label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{this.caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 my-2">
                            {{#with name}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 my-2">
                            {{#with phone}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 my-2">
                            {{#with email}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    <hr class="my-4">
                    <div>
                        {{#with coment}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                <hr class="my-4">
                <div class="row">
                    {{#with coupon}}
                    <h3 class="mb-3">{{title}}</h3>
                    <div class="col-12">
                        {{#with select}}
                        <div class="mb-2">
                            {{#with availabel_coupon}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select form-select-lg">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option>
                                    {{value}} - {{text}}<br />
                                </option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        <div class="mb-2">
                            {{#with friend_coupon}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option>
                                    {{value}} - {{text}}<br />
                                </option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    <div class="col-12">
                        {{#with add}}
                        <div class="mb-2">
                            {{#with friend}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control form-control-lg" placeholder="{{placeholder}}"></input>
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="mb-2">
                            {{#with colleague}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}"></input>
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                <hr class="my-4">
                <div class="row">
                    {{#with quiz}}
                    <h3>{{title}}</h3>
                    <div class="col-12">
                        {{#with preference}}
                        <div>{{title}}</div>
                        <div class="mt-0">
                            {{#each options}}
                            <input type="radio" name="quiz" {{#if @first}}checked{{/if}}>
                            <label>{{this}}</label><br />
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                    <div class="col-12 mt-2">
                        {{#with your_expirience}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control">
                        {{/with}}
                    </div>
                    <div class="col-12 mt-2">
                        {{#with purchase_frequency}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option>
                                {{value}} - {{text}}<br />
                            </option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>
                    <div class="mt-3">
                        {{#with factors}}
                        <div>{{title}}</div>
                        <div class="form-check py-2">
                            {{#each options}}
                            <input type="checkbox" class="form-check-input" {{#if @first}}checked{{/if}}>
                            <label class="form-check-label">{{this}}</label><br />
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>
            <div class="col-4">
                <div class="card">
                    {{#each action_block}}
                    <div class="card-body">
                        <button
                            class="btn 
                        {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}}">
                            {{text}}</button>
                    </div>
                    {{/each}}
                </div>
                <div class="card mt-3">
                    <div class="card-body">
                        {{#with total}}
                        <h3>{{title}}</h3>
                        <div>
                            {{#each item_list}}
                            {{name}}: {{price}}<br />
                            {{/each}}
                        </div>
                        <hr>
                        <div>
                            {{#each additional_info}}
                            {{text}}: {{value}}<br />
                            {{/each}}
                        </div>
                        <hr>
                        <div>
                            {{#with total_price}}
                            {{text}}: {{value}}
                            {{/with}}
                        </div>
                        <hr>
                        <div>
                            {{#each button}}
                            <button
                                class="mb-2 btn {{#if isPrimary}}btn-primary{{else}}btn-outline-primary{{/if}}">{{text}}</button>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>