<section class="py-5">
    <div class="row g4">
        {{#each footer}}
        <div class="col-2 mx-3">
            <div class="card h-100 border-light d-flex flex-column justify-content-between">
                {{#each this}}
                <a href="{{this.link}}"
                    class="{{#if @last}}nav-link disabled{{/if}} m-2 text-decoration-none">{{this.text}}</a>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</section>