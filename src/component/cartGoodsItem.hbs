<section class="col-12">
    {{#each goodsBlock}}
    <div class="card p-0 my-4">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <img class="card-img-top" src="{{image}}">
                </div>
                <div class="col-4">
                    <h4>{{name}}</h4>
                    <p>{{description}}</p>
                </div>
                <div class="col-2 p-4">
                    {{#with price}}
                    <p>{{title}}</p>
                    <h5>{{value}}</h5>
                    {{/with}}
                </div>
                <div class="col-2 p-5">
                    <p>{{amount}}</p>
                </div>
                <div class="col-2 py-3">
                    {{#each buttons}}
                    <button
                        class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}} my-2">{{text}}</button>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</section>